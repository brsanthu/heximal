{
  "name": "@heximal/templates",
  "version": "0.1.3",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "files": [
    "index.{d.ts,d.ts.map,js,js.map}",
    "src/*",
    "!src/benchmarks/*",
    "!src/demo/*",
    "!src/test/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "benchmark": "wireit",
    "demo": "wireit"
  },
  "dependencies": {
    "@heximal/expressions": "^0.1.3",
    "lit-html": "^3.1.2",
    "trusted-types": "^2.0.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/mocha": "^10.0.6",
    "@web/dev-server": "^0.4.3",
    "@web/dev-server-rollup": "^0.6.1",
    "@web/test-runner": "^0.18.1",
    "@web/test-runner-mocha": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0",
    "prettier": "^3.2.5",
    "tachometer": "^0.7.0",
    "typescript": "^5.4.2",
    "wireit": "^0.14.4"
  },
  "keywords": [
    "heximal",
    "html",
    "lit-html",
    "template"
  ],
  "author": "Elematic Software, Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elematic/heximal.git",
    "directory": "packages/templates"
  },
  "bugs": {
    "url": "https://github.com/elematic/heximal/issues"
  },
  "homepage": "https://github.com/elematic/heximal/tree/main/packages/templates",
  "wireit": {
    "build": {
      "command": "tsc",
      "dependencies": [
        "../expressions:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "index.js",
        "index.js.map",
        "index.d.ts.map",
        "index.d.ts"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "wtr test/**/*_test.js --node-resolve --playwright --browsers chromium",
      "dependencies": [
        "build"
      ],
      "files": [
        "web-test-runner.config.js"
      ],
      "output": []
    },
    "benchmark": {
      "command": "tach --config tachometer.config.json",
      "dependencies": [
        "build"
      ],
      "files": [
        "tachometer.config.json"
      ],
      "output": []
    },
    "demo": {
      "command": "wds --node-resolve",
      "service": {
        "readyWhen": {
          "lineMatches": "Web Dev Server started..."
        }
      },
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ],
      "files": [
        "demo/index.html",
        "web-dev-server.config.js"
      ]
    }
  }
}
