{
  "name": "@heximal/element",
  "version": "0.1.0",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "files": [
    "index.{d.ts,d.ts.map,js,js.map}",
    "lib/*",
    "src/*",
    "!src/demo/*",
    "!src/test/*"
  ],
  "dependencies": {
    "lit": "^3.1.2",
    "@heximal/templates": "^0.1.0"
  },
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "demo": "wireit"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/mocha": "^10.0.6",
    "@web/dev-server": "^0.4.3",
    "@web/test-runner": "^0.18.1",
    "@web/test-runner-mocha": "^0.9.0",
    "@web/test-runner-playwright": "^0.11.0"
  },
  "author": "Elematic Software, Inc.",
  "license": "MIT",
  "repository": "elematic/heximal",
  "bugs": {
    "url": "https://github.com/elematic/heximal/issues"
  },
  "homepage": "https://github.com/elematic/heximal/tree/main/packages/element",
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "dependencies": [
        "../templates:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "index.{d.ts,d.ts.map,js,js.map}",
        "lib",
        "test"
      ],
      "clean": "if-file-deleted"
    },
    "demo": {
      "command": "wds",
      "service": true,
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ],
      "files": [
        "web-dev-server.config.js"
      ]
    },
    "test": {
      "command": "wtr test/**/*_test.js --node-resolve --playwright --browsers chromium",
      "dependencies": [
        "build"
      ],
      "files": [
        "web-test-runner.config.js"
      ],
      "output": []
    }
  }
}
