{
  "name": "@heximal/expressions",
  "version": "0.1.0",
  "description": "A simple expression parser and evaluator",
  "repository": {
    "type": "git",
    "url": "https://github.com/elematic/heximal.git",
    "directory": "packages/expressions"
  },
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./lib/*": "./lib/*.js"
  },
  "files": [
    "index.*",
    "lib/*",
    "src/*",
    "!src/benchmark/*",
    "!src/test/*"
  ],
  "scripts": {
    "build": "wireit",
    "test": "wireit",
    "prepublish": "npm test",
    "benchmark": "wireit"
  },
  "author": "Elematic Software, Inc.",
  "license": "BSD 3-Clause",
  "devDependencies": {
    "@types/benchmark": "^2.1.5",
    "@types/node": "^22.5.4",
    "benchmark": "^2.1.4"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "index.{js,js.map,d.ts,d.ts.map}",
        "lib"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "node --test-reporter spec --test test/*_test.js",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    },
    "benchmark": {
      "command": "node benchmark/eval_benchmark",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    }
  },
  "dependencies": {
    "tslib": "^2.7.0"
  }
}
