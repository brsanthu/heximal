{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [
            "es2017"
        ],
        "outFile": "./polymer-expressions.js",
        "declaration": true,
        "sourceMap": true,
        "pretty": false,
        "rootDirs": [
            "./src"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/test/**"
    ]
}